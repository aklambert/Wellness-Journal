<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.timer.TimerFragment">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="151dp"
            android:layout_height="180dp"
            android:contentDescription="@string/timer_icon"
            android:src="@drawable/timer_navigation_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.022" />

        <TextView
            android:id="@+id/label_hours"
            style="@style/style_header1"
            android:layout_width="197dp"
            android:layout_height="64dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="@string/hours"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/label_minutes"
            style="@style/style_header1"
            android:layout_width="197dp"
            android:layout_height="64dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="@string/minutes"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_hours"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/input_hours"
            style="@style/style_header3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:autofillHints=""
            android:backgroundTint="@color/primary_color"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/enter_hours"
            android:inputType="number"
            android:textColorHint="@color/material_dynamic_neutral40"
            android:textCursorDrawable="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_hours"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/input_minutes"
            style="@style/style_header3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:autofillHints=""
            android:backgroundTint="@color/primary_color"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/enter_minutes"
            android:inputType="number"
            android:textColorHint="@color/material_dynamic_neutral40"
            android:textCursorDrawable="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_minutes"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btn_begin"
            style="@style/btn_primary"
            android:layout_width="205dp"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="48dp"
            android:text="@string/start_timer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_minutes"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="TextSizeCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>