<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_welcome_screen_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    tools:context=".ui.welcome.WelcomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_welcome_message"
            android:layout_width="307dp"
            android:layout_height="165dp"
            android:fontFamily="@font/poppins"
            android:gravity="start"
            android:lineSpacingExtra="10sp"
            android:text="@string/welcome_message"
            app:layout_constraintVertical_bias="0"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="@dimen/welcome_msg_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_hello"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/txt_hello"
            style="@style/style_title"
            android:layout_width="284dp"
            android:layout_height="151dp"
            android:fontFamily="@font/poppins"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:gravity="center"
            android:text="@string/Hello"
            app:layout_constraintVertical_bias="0"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView2" />

        <Button
            android:id="@+id/btn_begin"
            style="@style/btn_secondary"
            android:layout_width="139dp"
            android:layout_height="72dp"
            android:layout_margin="@dimen/margin_between_save_and_delete_btns"
            android:text="@string/btn_begin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_welcome_message" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="153dp"
            android:layout_height="174dp"
            app:layout_constraintVertical_bias="0"
            android:contentDescription="@string/logo_weight_description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="@dimen/margin_between_save_and_delete_btns"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo_weight" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>